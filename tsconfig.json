{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src", // Set the base URL for resolving paths
    "paths": {
      "@types": ["types"] // Define the path alias for types
    }
  },
  "include": ["**/*.ts"], // Update include patterns
  "exclude": ["node_modules", "__tests__"]
}
