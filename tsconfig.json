{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
		"baseUrl": "./", 
    "paths": {
			"@src/*": ["src/*"],
      "@types": ["src/types"] // Define the path alias for types
    }
  },
	"types": ["@types/jest"],
  "include": ["src/**/*.ts", "__tests__/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
